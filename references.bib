   issn = {02706474},
   journal = {Journal of Neuroscience},
   keywords = {DSI,GABA,Interneuron,LTD,Lipid,MGL,mGluR5},
   title = {Molecular composition of the endocannabinoid system at glutamatergic synapses},
   year = {2006},
}
