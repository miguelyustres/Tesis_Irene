   keywords = {Astrocytes,Endocannabinoids,Hippocampus,Prefrontal cortex,Striatum,Synaptic plasticity},
   month = {9},
   pages = {13-24},
   title = {Synaptic functions of endocannabinoid signaling in health and disease},
