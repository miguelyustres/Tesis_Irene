   issn = {0270-6474},
   issue = {11},
   journal = {Journal of Neuroscience},
   keywords = {CB1 receptor,Cannabinoid,Cerebellum,Excitatory synapse,Hippocampus,Presynaptic suppression,Purkinje cell,Pyramidal cell},
   month = {3},
   pages = {2991-3001},
   title = {The CB1 Cannabinoid Receptor Is the Major Cannabinoid Receptor at Excitatory Presynaptic Sites in the Hippocampus and Cerebellum},
   volume = {26},
   url = {http://www.jneurosci.org/cgi/doi/10.1523/JNEUROSCI.4872-05.2006},
