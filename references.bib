   journal = {Neuropharmacology},
   keywords = {2-Arachidonoylglycerol,Adenylyl cyclase,Anandamide,Antinociception,Basal ganglia,CP55940,Cognition,Depolarization-induced suppression of inhibition (,Dronabinol,Endocannabinoid,G-protein-coupled receptors,Hippocampus,Limbic system,Memory},
