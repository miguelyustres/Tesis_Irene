   issn = {1091-6490},
   journal = {Proceedings of the National Academy of Sciences of the United States of America},
   pages = {1-6},
   pmid = {24843137},
   title = {A restricted population of CB1 cannabinoid receptors with neuroprotective activity.},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/24843137},
   year = {2014},
}
@article{Zuccato2001,
   abstract = {Huntingtin is a 350-kilodalton protein of unknown function that is mutated in HuntingtonÕs disease (HD), a neurodegenerative disorder. The mutant protein is presumed to acquire a toxic gain of function that is detrimental to striatal neurons in the brain. However, loss of a beneÞcial activity of wild-type huntingtin may also cause the death of striatal neurons. Here we demonstrate that wild-type huntingtin up-regulates transcription of brain-derived neurotrophic factor (BDNF), a pro-survival factor produced by cortical neurons that is necessary for survival of striatal neurons in the brain. We show that this beneÞcial activity of huntingtin is lost when the protein becomes mutated, resulting in decreased production of cortical BDNF. This leads to insufÞcient neurotrophic support for striatal neurons, which then die. Restoring wild-type huntingtin activity and increasing BDNF production may be therapeutic approaches for treating HD.},
