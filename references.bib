   isbn = {0021-9967 (Print)\r0021-9967 (Linking)},
   issn = {0021-9967},
   journal = {The Journal of comparative neurology},
   keywords = {choline acetyltransferase,golgi impregnation,immunocytochemistry},
   pages = {219-234},
   pmid = {3281983},
   title = {Cholinergic synaptic input to different parts of spiny striatonigral neurons in the rat.},
   volume = {269},
   year = {1988},
}
