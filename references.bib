   issue = {43},
   journal = {Journal of Neuroscience},
   keywords = {BDNF,Huntington's disease,Microarray,Neurodegeneration,Neurotrophin,Polyglutamine,Striatum},
   pages = {11758-11768},
   title = {Expression profiling of Huntington's disease models suggests that brain-derived neurotrophic factor depletion plays a major role in striatal degeneration},
   volume = {27},
   year = {2007},
