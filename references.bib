   keywords = {CB1 receptor,Cholecystokinin,Memory,Presynaptic,Release,Synchronization},
   month = {10},
   pages = {797-804},
   pmid = {11036213},
   title = {GABAergic interneurons are the targets of cannabinoid actions in the human hippocampus},
