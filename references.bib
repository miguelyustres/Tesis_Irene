   issn = {1078-8956},
   issue = {3},
   journal = {Nature Medicine},
   month = {3},
   pages = {313-319},
   pmid = {10700234},
   title = {Anti-tumoral action of cannabinoids: Involvement of sustained ceramide accumulation and extracellular signal-regulated kinase activation},
