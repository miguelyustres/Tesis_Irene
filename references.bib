   journal = {Cell death and differentiation},
   pages = {1618-29},
   pmid = {25698444},
   title = {The CB₁ cannabinoid receptor signals striatal neuroprotection via a PI3K/Akt/mTORC1/BDNF pathway.},
   volume = {22},
   url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=4563779&tool=pmcentrez&rendertype=abstract},
