   issn = {1083351X},
   issue = {22},
   journal = {Journal of Biological Chemistry},
   pages = {11581-11595},
   title = {Insights into the C-terminal peptide binding specificity of the PDZ domain of neuronal nitric-oxide synthase: Characterization of the interaction with the tight junction protein claudin-3},
   volume = {291},
   year = {2016},
}
