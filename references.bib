   keywords = {Dentate gyrus,Long-term potentiation,Mossy cells,Neurophysiology,Prefrontal cortex,fMRI},
   title = {Functional MRI of long-term potentiation: Imaging network plasticity},
   volume = {369},
   year = {2014},
}
